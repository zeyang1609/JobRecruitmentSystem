@model JobRecruitmentSystem.Models.JobPost

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3>Post a New Job</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="JobTitle" class="form-label">Job Title</label>
                                <input asp-for="JobTitle" class="form-control" placeholder="e.g. Junior Web Developer" />
                                <span asp-validation-for="JobTitle" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="JobCategoryId" class="form-label">Category</label>
                                <select asp-for="JobCategoryId" class="form-select" asp-items="ViewBag.Categories">
                                    <option value="">-- Select Category --</option>
                                </select>
                                <span asp-validation-for="JobCategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="EmploymentType" class="form-label">Employment Type</label>
                                <select asp-for="EmploymentType" class="form-select">
                                    <option>Full-time</option>
                                    <option>Part-time</option>
                                    <option>Contract</option>
                                    <option>Internship</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Salary" class="form-label">Salary (Monthly)</label>
                                <input asp-for="Salary" class="form-control" type="number" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="JobLocation" class="form-label">Location</label>
                            <input asp-for="JobLocation" class="form-control" placeholder="e.g. Kuala Lumpur (Hybrid)" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="JobDescription" class="form-label">Job Description & Requirements</label>
                            <textarea asp-for="JobDescription" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="JobDescription" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label">Status</label>
                                <select asp-for="Status" class="form-select">
                                    <option value="Draft">Draft (Hidden)</option>
                                    <option value="Active">Active (Visible)</option>
                                    <option value="Closed">Closed</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ClosingDate" class="form-label">Closing Date</label>
                                <input asp-for="ClosingDate" class="form-control" type="date" />
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Publish Job</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>