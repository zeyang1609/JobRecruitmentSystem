@model JobRecruitmentSystem.Models.JobPost

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-white p-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary fw-bold">@Model.JobTitle</h2>
                    <h5 class="text-muted">@Model.Employer?.CompanyName</h5>
                </div>
                <div>
                    @if (User.IsInRole("JobSeeker"))
                    {
                        <a href="#" class="btn btn-success btn-lg">Apply Now</a>
                    }
                    else if (!User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login to Apply</a>
                    }
                </div>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row mb-4">
                <div class="col-md-3">
                    <strong>Category:</strong> <br /> @Model.JobCategory?.Name
                </div>
                <div class="col-md-3">
                    <strong>Location:</strong> <br /> @Model.JobLocation
                </div>
                <div class="col-md-3">
                    <strong>Salary:</strong> <br /> RM @Model.Salary.ToString("N2")
                </div>
                <div class="col-md-3">
                    <strong>Type:</strong> <br /> @Model.EmploymentType
                </div>
            </div>

            <hr />

            <h4 class="mt-4">Job Description</h4>
            <p style="white-space: pre-line">@Model.JobDescription</p>

            <div class="mt-5 text-center">
                <a asp-action="Index" class="btn btn-outline-secondary">Back to Jobs</a>
            </div>
        </div>
    </div>
</div>